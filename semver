#!/usr/bin/env php
<?php

require __DIR__ . '/vendor/autoload.php';

use Symfony\Component\Console\Application;

$app = new Application('Semantic versioning helper', '0.1.0');

$app->add(new SemVerCli\Commands\InitCommand);
$app->add(new SemVerCli\Commands\SetCommand);
$app->add(new SemVerCli\Commands\GetCommand);
$app->add(new SemVerCli\Commands\IncCommand);

$app->run();
